{
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "lint-staged": "^10.5.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "sass": "^1.32.8"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,html,md}": "prettier --write"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
